<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/orgInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp" >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:id="@+id/orgLogo"
            android:src="@drawable/org_logo"
            android:layout_margin="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orgName"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="JBossOutreach"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orgWeb"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:text="@string/org_web"
            android:textIsSelectable="true"
            android:textAppearance="@style/Base.CardView"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orgMail"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:text="@string/org_mail"
            android:textIsSelectable="true"
            android:textAppearance="@style/Base.CardView"
            android:textSize="14sp"/>

    </android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/repoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/orgInfoCard"
        android:cacheColorHint="@android:color/transparent"/>
</RelativeLayout>